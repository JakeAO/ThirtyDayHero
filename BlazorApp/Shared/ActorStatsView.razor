@using ThirtyDayHero;
@using Radzen;

<RadzenCard Style="width: fit-content;min-width: 200px">
    <div style="text-align: center;background-color: lightgray;width: 100%">
        <h3>Stats</h3>
    </div>
    <table style="width: 100%">
    @for (int i = (int) StatType.STR; i <= (int) StatType.CHA; i++)
    {
        <tr>
            <th style="width: 35%;text-align: right">
                @(((StatType) i).ToString()):
            </th>
            <td style="width: 5%"></td>
            <td style="width: 60%;text-align: left">
                @statsMap[(StatType) i]
            </td>
        </tr>
    }
    </table>
</RadzenCard>

@code {
    [Parameter]
    public IStatMap statsMap { get; set; }
}
